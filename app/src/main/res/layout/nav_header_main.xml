<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorAccent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <com.bilibili.magicasakura.widgets.TintLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/theme_color_primary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_tltle"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:paddingLeft="40dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:src="@drawable/bili_default_avatar" />

            <ImageView
                android:id="@+id/iv_xin"
                android:paddingLeft="35dp"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/ic_navigation_header_notification"/>

            <ImageView
                android:id="@+id/iv_night"
                android:paddingLeft="12dp"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/ic_switch_night"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="硪祗寵妳"
            android:paddingLeft="60dp"
            android:drawableRight="@drawable/ic_lv0"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingTop="5dp"
        android:paddingBottom="20dp"
        android:text="硬币: 0.00  B币: 0.0" />

    </com.bilibili.magicasakura.widgets.TintLinearLayout>

</LinearLayout>
