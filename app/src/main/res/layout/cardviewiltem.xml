<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/item_cardview"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_margin="3dp"
        android:clickable="true"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="#33ffffff"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/loading_failed" />
            <TextView
                android:id="@+id/tv_durtion"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:text="00:03:47"
                android:textSize="12sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_desc"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="gegqrv51685152315164815qsvsv"
            android:textColor="#fb7299"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_nav_vip"
            android:text="6666" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="3"
                android:id="@+id/play_count"
                android:drawableLeft="@drawable/ic_info_views_large"
                android:layout_width="0dp"
                android:gravity="center"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:text="666.3万" />
            <TextView
                android:layout_weight="3"
                android:id="@+id/danmaku_count"
                android:drawableLeft="@drawable/ic_info_danmakus_large"
                android:layout_width="0dp"
                android:gravity="center"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:text="666.3万" />
            <TextView
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="              " />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>