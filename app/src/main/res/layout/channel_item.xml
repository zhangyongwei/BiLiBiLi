<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/iv_anchor"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/ll_icon"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/live_home_follow_anchor" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>

    </LinearLayout>
    <LinearLayout
    android:id="@+id/iv_center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="80dp">

    <ImageView

        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/live_home_live_center" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中心"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/iv_video"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="80dp">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/live_home_clip_video" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>

    </LinearLayout>
    <LinearLayout
    android:id="@+id/iv_search"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="80dp">

    <ImageView

        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/live_home_search_room" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>

    </LinearLayout>
    <LinearLayout
    android:id="@+id/iv_category"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="80dp">

    <ImageView

        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/live_home_all_category" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分类"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>

    </LinearLayout>


</LinearLayout>